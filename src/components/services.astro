---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
const { service } = Astro.props;
---

<div class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
  <div class="text-center mb-4">
    <!-- Subheader -->
    <h4 class="text-lg font-medium text-gray-400">{service.subheader}</h4><p
    <!-- Title -->
    <p class="mt-3 text-4xl font-bold text-black md:text-4xl">{service.title}</p>

  </div>
  <!-- Description -->
  <p class="text-gray-800 mt-8">
    {
      service.description.split('<br>').map((part, index) => (
        <Fragment key={index}>
          {part}
          {index < service.description.split('<br>').length - 1 && <br />}
        </Fragment>
      ))
    }
  </p>
  <!-- <div class="mt-4 text-center"> -->
  <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center items-center">
    <Link
      href={service.button.link || "#"}
      class="flex gap-1 items-center justify-center md:w-auto"
      rel="noopener">
      <Icon class="text-white w-5 h-5" name="bx:bx-mail-send" />
       {service.button.text || "Get Started"}
    </Link>
  </div>
</div> 

