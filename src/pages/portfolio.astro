---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";

// Example video portfolio items
const highlightReel = [
  { src: "/videos/highlight-reel.mp4", alt: "Highlight Reel", orientation: "horizontal" },
];

const weddingVideos = [
  { src: "/videos/2025-5-1 Tatiana and Johnny Wedding - Edit 2.3.19.mp4", alt: "Tatiana and Johnny", orientation: "horizontal" },
  { src: "https://www.youtube.com/embed/YURWqTH_Qjw", alt: "Dom and Nicole", orientation: "horizontal", type: "youtube" },
  { src: "https://www.youtube.com/embed/D3hYzdkPRfo", alt: "Claire and Taylor", orientation: "horizontal", type: "youtube" },
  { src: "https://www.youtube.com/embed/ILGs6kNYPSs", alt: "Debbie and Curtis", orientation: "horizontal", type: "youtube" },
  // Add more horizontal wedding videos here
];

const yelpVerticals = [
  { src: "https://www.youtube.com/embed/S4ryQhjM-vg", alt: "Yelp - The Flower Fields", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/OPnxxHnJIcE", alt: "Yelp - Rancho Guejito", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/hGjnzrHYPKI", alt: "Yelp - Toasted Gastropub + Dinner", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/SaZ7Rjn9Y18", alt: "Yelp - Halloween Event", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/uzmutiXiA54", alt: "Yelp - Rooftop Cinema Club", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/Ejiuovk-S3o", alt: "Yelp - Piper", orientation: "vertical", type: "youtube" },
  // Add more vertical Yelp videos here
];

const businessPromos = [
  { src: "/videos/2025-6-14 Farm Stand_4.mp4", alt: "The Farm Stand Poway", orientation: "vertical" },
  { src: "/videos/2025-2-23 Yanni's Shoot 1.1_3.mp4", alt: "Yanni's", orientation: "vertical" },
  { src: "/videos/video4.mp4", alt: "Business Promo Vertical", orientation: "vertical" },
  // Add more vertical business promo videos here
];

const familyShoots = [
  { src: "https://www.youtube.com/embed/losVklkTizw", alt: "Cori Baby Shower", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/V3AnMvpFcTQ", alt: "Sarah Baby Shower", orientation: "vertical", type: "youtube" },
  { src: "https://www.youtube.com/embed/LXpj0xoyqsk", alt: "Trish and Andrew Maternity", orientation: "vertical", type: "youtube" },
  // Add more vertical family shoot videos here
];
---

<Layout title="Portfolio ">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Video Portfolio </Fragment>
      <Fragment slot="desc">A portfolio of our video work, organized by category.</Fragment>
    </Sectionhead>



    <div class="mb-16 flex flex-col items-center">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Weddings</h2>
      {/* First row: Tatiana and Johnny, full width */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center mb-8">
        <div class="col-span-1 md:col-span-3 video-item horizontal w-full flex flex-col items-center">
          <iframe
            class="w-full h-auto rounded shadow"
            style="aspect-ratio: 16/9; max-width: 900px;"
            src="https://www.youtube.com/embed/fy1jPwLMvgY"
            title="Tatiana and Johnny Wedding"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
          <div class="mt-2 text-center text-sm text-gray-700">Tatiana and Johnny</div>
        </div>
      </div>
      {/* Next row: 3 wedding videos */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center">
        {weddingVideos
          .filter(video => video.alt !== "Tatiana and Johnny")
          .map(video => (
            <div class={`video-item ${video.orientation} w-full flex flex-col items-center`}>
              {video.type === "youtube" ? (
                <iframe
                  class="w-full h-auto rounded shadow"
                  style="aspect-ratio: 16/9; max-width: 360px;"
                  src={video.src}
                  title={video.alt}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              ) : (
                <video
                  controls
                  class="w-full h-auto rounded shadow"
                  style="aspect-ratio: 16/9; max-width: 360px;"
                >
                  <source src={video.src} type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              )}
              <div class="mt-2 text-center text-sm text-gray-700">{video.alt}</div>
            </div>
        ))}
      </div>
    </div>

    <div class="mb-16 flex flex-col items-center">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Yelp Vertical Reels</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center">
        {yelpVerticals.map(video => (
          <div class={`video-item ${video.orientation} w-full flex flex-col items-center`}>
            {video.type === "youtube" ? (
              <iframe
                class="w-full h-auto rounded shadow"
                style="aspect-ratio: 9/16; max-width: 360px;"
                src={video.src}
                title={video.alt}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            ) : (
              <video
                controls
                class="w-full h-auto rounded shadow"
                style="aspect-ratio: 9/16; max-width: 360px;"
              >
                <source src={video.src} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            )}
            <div class="mt-2 text-center text-sm text-gray-700">{video.alt}</div>
          </div>
        ))}
      </div>
    </div>

    <div class="mb-16 flex flex-col items-center">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Business Promo Videos</h2>
      {/* Comfort & Peace Company Celebration - full width row */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center mb-8">
        <div class="col-span-1 md:col-span-3 video-item horizontal w-full flex flex-col items-center">
          <iframe
            class="w-full h-auto rounded shadow"
            style="aspect-ratio: 16/9; max-width: 900px;"
            src="https://www.youtube.com/embed/apkDlvlwsNk"
            title="Comfort & Peace Company Celebration"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
          <div class="mt-2 text-center text-sm text-gray-700">Comfort & Peace Company Celebration</div>
        </div>
      </div>
      {/* Next row: 3 vertical business promo videos */}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center">
        <div class="video-item vertical w-full flex flex-col items-center">
          <iframe
            class="w-full h-auto rounded shadow"
            style="aspect-ratio: 9/16; max-width: 360px;"
            src="https://www.youtube.com/embed/xLpli9My15w"
            title="Pretty Petals SD"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
          <div class="mt-2 text-center text-sm text-gray-700">Pretty Petals SD</div>
        </div>
        <div class="video-item vertical w-full flex flex-col items-center">
          <iframe
            class="w-full h-auto rounded shadow"
            style="aspect-ratio: 9/16; max-width: 360px;"
            src="https://www.youtube.com/embed/vbdF2oStSxA"
            title="Dirty Dough"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
          <div class="mt-2 text-center text-sm text-gray-700">Dirty Dough</div>
        </div>
        <div class="video-item vertical w-full flex flex-col items-center">
          <iframe
            class="w-full h-auto rounded shadow"
            style="aspect-ratio: 9/16; max-width: 360px;"
            src="https://www.youtube.com/embed/b36Eq_4GItc"
            title="The Lookout At Lake Poway"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
          <div class="mt-2 text-center text-sm text-gray-700">The Lookout At Lake Poway</div>
        </div>
      </div>
    </div>
    <div class="mb-16 flex flex-col items-center">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Family Video Shoots</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full justify-items-center">
        {familyShoots.map(video => (
          <div class={`video-item ${video.orientation} w-full flex flex-col items-center`}>
            {video.type === "youtube" ? (
              <iframe
                class="w-full h-auto rounded shadow"
                style="aspect-ratio: 9/16; max-width: 360px;"
                src={video.src}
                title={video.alt}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            ) : (
              <video
                controls
                class="w-full h-auto rounded shadow"
                style="aspect-ratio: 9/16; max-width: 360px;"
              >
                <source src={video.src} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            )}
            <div class="mt-2 text-center text-sm text-gray-700">{video.alt}</div>
          </div>
        ))}
      </div>
    </div>
  </Container>

  <footer class="bg-white text-black py-16 mt-12">
    <Container>
      <div class="flex flex-col md:flex-row items-center justify-center gap-8 w-full max-w-4xl mx-auto">
        <div class="w-full md:w-auto text-center md:text-left">
          <span class="font-light">Service Area:</span> Proudly serving Poway, Greater San Diego, and beyond.
        </div>
        <nav class="flex gap-6 w-full md:w-auto justify-center">
          <a href="/service" class="hover:underline">Services</a>
          <a href="/about" class="hover:underline">About</a>
          <a href="/portfolio" class="hover:underline">Portfolio</a>
          <a href="/contact" class="hover:underline">Contact</a>
        </nav>
        <div class="flex gap-3 justify-center w-full md:w-auto">
          <a href="https://instagram.com/heylproductions" aria-label="Instagram" target="_blank" rel="noopener">
            <Icon name="mdi:instagram" class="w-6 h-6" />
            <span class="sr-only">@heylproductions</span>
          </a>
          <a href="#" aria-label="Facebook"><Icon name="mdi:facebook" class="w-6 h-6" /></a>
          <a href="#" aria-label="YouTube"><Icon name="mdi:youtube" class="w-6 h-6" /></a>
          <a 
            href="mailto:erick@heylproductions.com,samantha@heylproductions.com" 
            aria-label="Email Erick and Samantha" 
            target="_blank" 
            rel="noopener"
          >
            <Icon name="mdi:email" class="w-6 h-6" />
            <span class="sr-only">Email Erick and Samantha</span>
          </a>
        </div>
      </div>
    </Container>
  </footer>
</Layout>

<style>
.video-item.vertical video {
  max-width: 360px;
  aspect-ratio: 9/16;
  margin-left: auto;
  margin-right: auto;
}
.video-item.horizontal video {
  aspect-ratio: 16/9;
}
</style>
